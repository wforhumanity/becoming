---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "An artist collective building open tools for reflection, healing, and growth." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | forHumanity.art</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header>
      <nav>
        <div class="logo">
          <a href="/">forHumanity.art</a>
        </div>
        <ul class="nav-links">
          <li><a href="/about">About</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/philosophy">Philosophy</a></li>
          <li><a href="/contribute">Contribute</a></li>
        </ul>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <p>forHumanity.art â€¢ created by humans, for humanity</p>
    </footer>
  </body>
</html>

<style>
  /* Basic reset and variables will be in global.css */
  
  /* Layout styles */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  header {
    padding: 2rem 0;
  }
  
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo a {
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--color-text);
  }
  
  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .nav-links a {
    text-decoration: none;
    color: var(--color-text);
    transition: color 0.2s ease;
  }
  
  .nav-links a:hover {
    color: var(--color-primary);
  }
  
  main {
    flex: 1;
    padding: 2rem 0;
  }
  
  footer {
    padding: 2rem 0;
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-text-light);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      gap: 1rem;
    }
    
    .nav-links {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }
  }
</style>
